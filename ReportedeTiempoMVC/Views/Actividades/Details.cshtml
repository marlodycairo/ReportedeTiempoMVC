@model IEnumerable<ReportedeTiempoMVC.Models.ActividadesViewModel> 

@{
    ViewData["Title"] = "Detalle Actividades";
}

<div>
    <a asp-action="CreateActividad" asp-controller="Actividades">Create</a>
</div>

<div class="container">
    <table class="table table-hover">
        <thead class="text-center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TiempoReportado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TiempoReportado) Hora(s)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
